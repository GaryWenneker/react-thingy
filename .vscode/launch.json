{
  "version": "0.2.0",
  "configurations": [
  
    {
      "name": ".NET Core Launch (console)",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build",
      "program": "${workspaceFolder}/Web.App/bin/Debug/netcoreapp2.1/WebApp.dll",
      "args": [],
      "cwd": "${workspaceFolder}",
      "stopAtEntry": false,
      "console": "internalConsole"
    },
    {
      "name": ".NET Core Launch (web)",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build",
      "program": "${workspaceFolder}/Web.App/bin/Debug/netcoreapp2.1/WebApp.dll",
      "args": [],
      "cwd": "${workspaceFolder}",
      "stopAtEntry": false,
      "launchBrowser": {
        "enabled": true,
        "args": "${auto-detect-url}",
        "windows": {
          "command": "cmd.exe",
          "args": "/C start ${auto-detect-url}"
        },
        "osx": {
          "command": "open"
        },
        "linux": {
          "command": "xdg-open"
        }
      },
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development"
      },
      "sourceFileMap": {
        "/Views": "${workspaceFolder}/Views"
      }
    },
    {
      "type": "node",
      "request": "launch",
      "name": "autobuild-server",
      "program": "${workspaceFolder}/Web.App/ClientApp/autobuild-development-server-bundle-to-HypernovaServer.js",
      "runtimeExecutable": "nodemon",
      "restart": true,
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    },
    {
      "type": "node",
      "request": "attach",
      "name": "Attach by Process ID",
      "processId": "${command:PickProcess}"
    },
    {
      "type": "chrome",
      "request": "launch",
      "name": "Launch Chrome",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}/Web.App/ClientApp"
    },
    {
      "type": "chrome",
      "request": "launch",
      "name": "Launch Chrome on https://localhost:5001",
      "url": "https://localhost:5001",
      "webRoot": "${workspaceFolder}/Web.App/ClientApp"
    },
    // {
    //   "name": "Chrome",
    //   "type": "chrome",
    //   "request": "launch",
    //   "url": "http://localhost:3000",
    //   "webRoot": "${workspaceRoot}/src",
    //   "sourceMapPathOverrides": {
    //     "webpack:///src/*": "${webRoot}/*"
    // },
    {
      "type": "node",
      "request": "launch",
      "name": "HypernovaServer",
      "cwd": "${workspaceFolder}/Web.App/HypernovaComponentServer",
      "program": "${workspaceFolder}/Web.App/HypernovaComponentServer/componentserver.js",
      "runtimeArgs": [
        // "-r", "source-map-support/register"
      ],
      "env": {
        "ComponentServerBundles": "{\"pwa\":\"./server-bundle.js\"}"
      },
      "runtimeExecutable": "${workspaceRoot}/Web.App/ClientApp/node_modules/.bin/nodemon",
      "restart": true,
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "sourceMapPathOverrides": {
        "webpack:///./~/*": "${workspaceRoot}/Web.App/ClientApp/node_modules/*",
        "webpack:///./*": "${workspaceRoot}/Web.App/ClientApp/*",
        "webpack:///*": "*"
      }
    }
  ]
}